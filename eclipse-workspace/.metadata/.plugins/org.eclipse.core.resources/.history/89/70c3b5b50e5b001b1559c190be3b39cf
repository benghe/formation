package fr.formation.science;

public class Maths {
	public int addition(int a, int b) {
		return a + b;
	}

	public int soustraction(int a, int b) {

//		if(a==9 && b==5) {
//			return 4;
//		}
//		
//		if(a==0 && b==-8) {
//			return -8;
//		}
//		
//		return 0;

		return a - b;
	}
	
	public int puissance(int a, int b) {
		
		if(b==0) {
			return 1;
		}
		
		int result=1;
		
		for (int i = 1; i <= b; i++) {
			result=result*a;
			
		}
		
		return result;
	}

}
